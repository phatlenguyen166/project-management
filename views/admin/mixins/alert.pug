mixin alert-success(time)
  - if (messages.info) 
      .message.info
        div(
          class="alert alert-success"
          show-alert
          data-time= time
        ) #{messages.info} <span close-alert>x</span>
mixin alert-error(time)
  - if (messages.error) 
      .message.info
        div(
          class="alert alert-danger"
          show-alert
          data-time= time
        ) #{messages.error} <span close-alert>x</span>
        