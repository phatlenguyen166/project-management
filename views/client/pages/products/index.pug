extends ../../layouts/default.pug
include ../../mixins/box-head.pug 
block main
  .container.my-3
    .row
      .col-12
        +box-head("Danh sách sản phẩm")

    .row
      each item in products 
        .col-4.mb-3
          .product-item
            .innner-image
              //- img(src="https://i.dummyjson.com/data/products/1/thumbnail.jpg",alt="Iphone 15")  
              img(src=item.thumbnail, alt="")
              //- img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png", alt=item.title)
            .inner-content
              h3.inner-title #{item.title}
              .inner-price-new #{item.priceNew}
              .inner-price-old #{item.price}
              .inner-discount -#{item.discountPercentage}%
