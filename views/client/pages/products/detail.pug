extends ../../layouts/default.pug

block main 
    .container.my-3
        .row 
            .col-12 
                if (product.title)
                    h1.mb-4 #{product.title}
                if (product.price)
                    .mb-4 Giá: <b>#{product.price}$</b>  
                if (product.discountPercentage)
                    .mb-4 Giảm giá: <b>#{product.discountPercentage}%</b>  
                if (product.stock)
                    .mb-4 Còn lại: <b>#{product.stock}</b>  
                if (product.thumbnail)
                    .mb-4 
                        img(
                        src=product.thumbnail
                        style="width:100px;"
                    )
                //- if (product.status)
                //-     div(class="mb-4")   
                //-         span Trạng thái: 
                //-         if (product.status ==="active")
                //-             span(class="badge badge-success") Hoạt động
                //-         else 
                //-             span(class="badge bagde-danger") Dừng hoạt động
                        
                if (product.position)
                    .mb-4 Vị trí: <b>#{product.position}</b>  
                if (product.description)
                    .mb-4 Mô tả: <b>#{product.description}</b>  